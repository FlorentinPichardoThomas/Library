<%- include('../partials/header') %>
<div>
<form action="/books" method="get" class="pages">
    <input type="text" name="name" placeholder="Search your Book" value="<%= searchOptions.title %>">
    <button type="submit">Search</button>
</form>

<button class="menu-button" onclick="toggleMenu()">menu</button>
<div class="menu-content" id="menu">
    <div class="menu-item"><a href="/books" style="text-decoration: none;">Home</a></div>
   <div class="menu-item"><a href="/books/categories" style="text-decoration: none;">Categories</a></div>
   <% if (user) { %>
   <div class="menu-item"><a href="/logout">LOG OUT</a></div>
   <div class="menu-item"><a href="/books/new" style="text-decoration: none;" <%- title === 'Add Book' ? 'class="active"' : '' %>>Publish Your Book</a></div>
   <div class="menu-item"><a href="/books/yourBooks">Your Books</a></div>
    <% } else { %>
        <div class="menu-item"><a href="/register" class="login" >Sign-In</a></div>
   <div class="menu-item"><a href="/login" class="login" >Login</a></div>
   <div class="menu-item">Must Be Logged in to view this option</div>
   <% } %>
</div>
<div class="ZZZzzz">
    <% books.forEach(function(b){ %>
    <tr>
        <div><%= b.name %></div>
        <div><img src="/images/books/<%= b.coverImage%>"></div>
        <tr>
        <div><%= b.year %></div>
        <div><%= b.genre %></div>
        </tr>
       <div>
         <%= b.genre === 'fantasy' ? '' : '' %>
         <%= b.genre === 'sci-fi' ? '' : '' %>
         <%= b.genre === 'horror' ? '' : '' %>
         <%= b.genre === 'action' ? '' : '' %>
         <%= b.genre === 'non-fiction' ? '' : '' %>
         <%= b.genre === 'fiction' ? '' : '' %>
       </div>
        <button><a href="/books/<%= b._id %>" style="text-decoration: none;">View</a></button>
    </tr>
   <% }) %>
   <space></space>
</div>


<script>
    function toggleMenu(){
        var menu = document.getElementById('menu')
        if(menu.style.display === "block"){
            menu.style.display = "none"
        }else{
            menu.style.display = "block"
        }
    }
</script>
<%- include('../partials/footer') %>